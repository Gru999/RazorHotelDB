@page
@model RazorHotelDB.Pages.Shared.LoginModel
@{
}
<h1>Please Login</h1>

@Model.Message
<form method="post">
    <table>
        <tr>
            <td>UserName</td>
            <td><Input type="text" asp-for="@Model.UserName"/></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><Input type="password" asp-for="@Model.Password"/></td>
        </tr>
        <tr>
            <td>&nbsp</td>
            <td><Input type="submit" value="Login"/></td>
        </tr>
    </table>
</form>

